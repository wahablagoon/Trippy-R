<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="bl.taxi.rider.fragments.IntroFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_caps"
        android:textColor="@color/colorPrimaryDark"
        fontPath="fonts/Quicksand-Bold.ttf"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/intro_title"
        android:textSize="32sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_description"
        android:textColor="@color/otp_text"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/intro_title"
        android:id="@+id/intro_description"
        android:textSize="18sp"
        tools:ignore="MissingPrefix" />

</RelativeLayout>
