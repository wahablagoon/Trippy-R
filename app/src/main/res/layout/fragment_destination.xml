<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/destination_container"
    tools:context="bl.taxi.rider.fragments.DestinationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:id="@+id/backButton"
            android:contentDescription="@string/contentdescription"
            />

        <TextView
            android:text="Enter pickup location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/backButton"
            android:layout_toEndOf="@+id/backButton"
            android:layout_alignTop="@+id/backButton"
            android:layout_alignBottom="@+id/backButton"
            android:id="@+id/textView2" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/otp_text"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardCornerRadius="5dp"
        android:elevation="55dp"
        android:background="@android:color/white"
        android:layout_marginTop="52dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_grey_24dp"
            android:padding="10dp"
            android:background="@null"
            android:id="@+id/searchButton"
            android:contentDescription="@string/contentdescription"
            android:layout_weight="0"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:id="@+id/places_text"
            android:gravity="left|center"
            android:background="@android:color/transparent"
            android:hint="Search for a locality or landmark.."
            android:textColor="@color/otp_text"
            android:textColorHint="@color/otp_text"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:background="@null"
            android:padding="10dp"
            android:id="@+id/closeButton"
            android:contentDescription="@string/contentdescription"
            android:layout_weight="0"
            />


    </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_bottom"
        android:layout_below="@+id/card_view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="5dp"
        android:elevation="55dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/places_view"
            android:background="@android:color/transparent"
            android:divider="@null"
            android:scrollbars="none"
            />

    </android.support.v7.widget.CardView>



</RelativeLayout>
