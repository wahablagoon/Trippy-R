<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ECECEC"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/drawer_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@null"
            android:src="@drawable/ic_drawer_menu_black"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/toolbar_title"
            fontPath="fonts/Quicksand-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="Profiles &amp; Settings"
            android:paddingLeft="20dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/save_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:textColor="@color/otp_text"
            android:text="Save"
            android:textSize="16sp" />



    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/myLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:foreground="@drawable/bottom_shadow"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/mobile_layout"
            >

        <ImageButton
            android:id="@+id/local_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/ic_local_phone"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="Mobile Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/local_phone"
            android:layout_marginLeft="10dp"
            android:textColor="@color/otp_text"
            android:id="@+id/textView3" />

            <TextView
                android:text="9677772323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/local_phone"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_below="@+id/textView3"
                android:id="@+id/textView4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_marginTop="5dp"
                android:background="@color/view_grey"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/ic_local_pencil"
                tools:ignore="ContentDescription"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/mobile_layout"
            android:id="@+id/name_layout"
            >

            <ImageButton
                android:id="@+id/local_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/ic_local_account"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/local_name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/otp_text"
                android:id="@+id/text_name" />

            <TextView
                android:text="Thirumalai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/local_name"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_below="@+id/text_name"
                android:id="@+id/text_input_name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_input_name"
                android:layout_alignLeft="@+id/text_input_name"
                android:layout_marginTop="5dp"
                android:background="@color/view_grey"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/ic_local_pencil"
                tools:ignore="ContentDescription"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/name_layout"
            android:id="@+id/email_layout"
            >

            <ImageButton
                android:id="@+id/local_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/ic_local_email"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/otp_text"
                android:layout_toRightOf="@+id/local_email"
                android:layout_marginLeft="10dp"
                android:id="@+id/text_email" />

            <TextView
                android:text="msg2thirumalai@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/local_email"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_below="@+id/text_email"
                android:id="@+id/text_input_email" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_input_email"
                android:layout_alignLeft="@+id/text_input_email"
                android:layout_marginTop="5dp"
                android:background="@color/view_grey"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/ic_local_pencil"
                tools:ignore="ContentDescription"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/email_layout"
            android:id="@+id/password_layout"
            >

            <ImageButton
                android:id="@+id/local_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/ic_local_password"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/local_password"
                android:layout_marginLeft="10dp"
                android:textColor="@color/otp_text"
                android:id="@+id/text_password" />

            <TextView
                android:text="******"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/local_password"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_below="@+id/text_password"
                android:id="@+id/text_input_password" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/ic_local_pencil"
                tools:ignore="ContentDescription"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/password_layout"
            android:layout_marginTop="5dp"
            android:background="@color/otp_text"
            tools:ignore="UnknownId" />


    </RelativeLayout>

    <Button
        android:text="LOGOUT"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/button"
        android:textSize="18sp"
        android:background="@drawable/ic_rectangle_shape"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
